<mvc:View
    controllerName="de.plexdev.lovapp.controller.PredefinedPatterns"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        title="{i18n>appTitle.PredefinedPatterns} (Work In Progress)"
        content="{backend>/F4Modes}"
    >
        <content>
            <f:Card
                class="sapUiMediumMargin"
                width="300px"
            >
                <f:header>
                    <card:Header
                        title="{backend>name}"
                        iconSrc="sap-icon://accelerated"
                    />
                </f:header>
                <f:content>
                    <form:SimpleForm editable="true">
                        <form:content>
                            <Label text="Feature" />
                            <MultiComboBox
                                items="{backend>/F4Actions}"
                                selectedKeys="{viewModel>/selectedActions}"
                            >
                                <core:Item
                                    text="{backend>name}"
                                    key="{backend>key}"
                                />
                            </MultiComboBox>
                            <Label text="Toy" />
                            <Select
                                items="{backend>/getDevices?userId=1}"
                                selectedItem="{viewModel>/selectedDevice}"
                                change="onDevicesSelectChange"
                            >
                                <core:Item
                                    text="{backend>name} {= ${backend>nickName} ? '(' + ${backend>nickName} + ')' : ''}"
                                    key="{backend>id}"
                                />
                            </Select>
                            <Label text="Time {viewModel>/selectedTime}" />
                            <Slider
                                min="0"
                                max="600"
                                enableTickmarks="true"
                                value="{viewModel>/selectedTime}"
                                class="sapUiMediumMarginBottom"
                                enabled="false"
                            >
                                <ResponsiveScale tickmarksBetweenLabels="2" />
                            </Slider>
                            <Label text="Strength {viewModel>/selectedStrength}" />
                            <Slider
                                min="0"
                                max="20"
                                enableTickmarks="true"
                                liveChange="onSliderLiveChange"
                                value="{viewModel>/selectedStrength}"
                                class="sapUiMediumMarginBottom"
                            >
                                <ResponsiveScale tickmarksBetweenLabels="2" />
                            </Slider>
                        </form:content>
                        <form:toolbar>
                            <Toolbar>
                                <content>
                                    <ToolbarSpacer />
                                    <Button
                                        text="Start"
                                        type="Emphasized"
                                    />
                                </content>
                            </Toolbar>
                        </form:toolbar>
                    </form:SimpleForm>
                </f:content>
            </f:Card>
        </content>
        <customHeader>
        </customHeader>
        <footer>
        </footer>
        <headerContent>
        </headerContent>
        <landmarkInfo>
        </landmarkInfo>
        <subHeader>
        </subHeader>
    </Page>
</mvc:View>