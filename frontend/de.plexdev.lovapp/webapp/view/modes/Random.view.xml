<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="de.plexdev.lovapp.controller.modes.Random"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page title="{i18n>appTitle.Random}">
        <content>
            <form:SimpleForm
                editable="true"
                breakpointM="800"
            >
                <Label text="Toy" />
                <MultiComboBox
                    id="idSelectDevice"
                    items="{backend>/getDevices?userId=1}"
                    selectedKeys="{viewModel>/selectedDevice}"
                    change="onDevicesSelectChange"
                >
                    <core:Item
                        text="{backend>name} {= ${backend>nickName} ? '(' + ${backend>nickName} + ')' : ''}"
                        key="{backend>id}"
                    />
                </MultiComboBox>
                <Label text="Generation for each Toy (WIP)" />
                <FlexBox justifyContent="SpaceBetween">
                    <Switch
                        state="{viewModel>/newForEachToy}"
                        enabled="true"
                    />
                    <Text text="Soll f체r jedes Toy ein neues Pattern generiert werden?" />
                </FlexBox>
                <Label text="Feature" />
                <MultiComboBox
                    id="idSelectAction"
                    items="{backend>/F4Actions}"
                    selectedKeys="{viewModel>/selectedAction}"
                    width="10em"
                    enabled="true"
                    tooltip="Einzelne Motoren (wenn das Toy mehrere hat) unterst체tzt die Offizielle API derzeit noch nicht"
                >
                    <core:Item
                        text="{backend>name}"
                        key="{backend>shortKey}"
                    />
                </MultiComboBox>
                <Label text="Generation for each Feature (WIP)" />
                <FlexBox justifyContent="SpaceBetween">
                    <Switch
                        state="{viewModel>/newForEachFeature}"
                        enabled="false"
                    />
                    <Text text="Soll f체r jedes ausgew채hlte Feature ein neues Pattern generiert werden?" />
                </FlexBox>
                <Label text="Strength {viewModel>/strengthMin} {viewModel>/strengthMax}" />
                <VBox width="100%">
                    <RangeSlider
                        width="100%"
                        min="{config>/minimum-values/strength}"
                        max="{config>/maximum-values/strength}"
                        value="1"
                        value2="5"
                        enableTickmarks="true"
                        visible="{viewModel>/sliderEnabled}"
                        class="sapUiMediumMarginBottom"
                        change="onRangeSliderChange($event, '/strengthMin', '/strengthMax')"
                        liveChange="onRangeSliderLiveChange($event, '/strengthMin', '/strengthMax')"
                    >
                        <ResponsiveScale tickmarksBetweenLabels="2" />
                    </RangeSlider>
                    <HBox
                        width="100%"
                        class="sapUiTinyMarginBottom"
                        visible="{viewModel>/showInputs}"
                    >
                        <StepInput
                            value="{viewModel>/strengthMin}"
                            min="{config>/minimum-values/strength}"
                            max="{config>/maximum-values/strength}"
                            step="{config>/step-values/strength}"
                            change="onMinStepInputChange($event, '/strengthMin', '/strengthMax')"
                        />
                        <StepInput
                            value="{viewModel>/strengthMax}"
                            min="{config>/minimum-values/strength}"
                            max="{config>/maximum-values/strength}"
                            step="{config>/step-values/strength}"
                            change="onMaxStepInputChange($event, '/strengthMax', '/strengthMin')"
                        />
                        <!-- <layoutData>
                        <layout:GridData span="XL2 L2 M12 S12" />
                    </layoutData> -->
                    </HBox>
                </VBox>
                <Label text="Interval (millisec) {viewModel>/intervalMin} {viewModel>/intervalMax}" />
                <VBox width="100%">
                    <RangeSlider
                        min="{config>/minimum-values/interval}"
                        max="{config>/maximum-values/interval}"
                        value="100"
                        value2="1000"
                        visible="{viewModel>/sliderEnabled}"
                        enableTickmarks="true"
                        class="sapUiMediumMarginBottom"
                        change="onRangeSliderChange($event, '/intervalMin', '/intervalMax')"
                        liveChange="onRangeSliderLiveChange($event, '/intervalMin', '/intervalMax')"
                    >
                        <ResponsiveScale tickmarksBetweenLabels="10" />
                    </RangeSlider>
                    <HBox
                        class="sapUiTinyMarginBottom"
                        visible="{viewModel>/showInputs}"
                    >
                        <StepInput
                            value="{viewModel>/intervalMin}"
                            min="{config>/minimum-values/interval}"
                            max="{config>/maximum-values/interval}"
                            step="{config>/step-values/interval}"
                            change="onMinStepInputChange($event, '/intervalMin', '/intervalMax')"
                        />
                        <StepInput
                            value="{viewModel>/intervalMax}"
                            min="{config>/minimum-values/interval}"
                            max="{config>/maximum-values/interval}"
                            step="{config>/step-values/interval}"
                            change="onMaxStepInputChange($event, '/intervalMax', '/intervalMin')"
                        />
                        <!-- <layoutData>
                            <layout:GridData span="XL2 L2 M12 S12" />
                        </layoutData> -->
                    </HBox>
                </VBox>
                <Label text="Time (sec) {viewModel>/timeMin} {viewModel>/timeMax}" />
                <VBox width="100%">
                    <RangeSlider
                        min="{config>/minimum-values/time}"
                        max="{config>/maximum-values/time}"
                        value="0"
                        value2="0"
                        visible="{viewModel>/sliderEnabled}"
                        enableTickmarks="true"
                        class="sapUiMediumMarginBottom"
                        change="onRangeSliderChange($event, '/timeMin', '/timeMax')"
                        liveChange="onRangeSliderLiveChange($event, '/timeMin', '/timeMax')"
                    >
                        <ResponsiveScale tickmarksBetweenLabels="10" />
                    </RangeSlider>
                    <HBox
                        class="sapUiTinyMarginBottom"
                        visible="{viewModel>/showInputs}"
                    >
                        <StepInput
                            value="{viewModel>/timeMin}"
                            min="{config>/minimum-values/time}"
                            max="{config>/maximum-values/time}"
                            step="{config>/step-values/time}"
                            change="onMinStepInputChange($event, '/timeMin', '/timeMax')"
                        />
                        <StepInput
                            value="{viewModel>/timeMax}"
                            min="{config>/minimum-values/time}"
                            max="{config>/maximum-values/time}"
                            step="{config>/step-values/time}"
                            change="onMaxStepInputChange($event, '/timeMax', '/timeMin')"
                        />
                        <!-- <layoutData>
                        <layout:GridData span="XL2 L2 M12 S12" />
                    </layoutData> -->
                    </HBox>
                </VBox>
                <Label text="PatternLength {viewModel>/patternLength}" />
                <VBox width="100%">
                    <Slider
                        min="1"
                        max="50"
                        value="{viewModel>/patternLength}"
                        visible="{viewModel>/sliderEnabled}"
                        enableTickmarks="true"
                        class="sapUiMediumMarginBottom"
                    >
                        <ResponsiveScale tickmarksBetweenLabels="2" />
                    </Slider>
                    <StepInput
                        visible="{viewModel>/showInputs}"
                        value="{viewModel>/patternLength}"
                        min="{config>/minimum-values/patternLength}"
                        max="{config>/maximum-values/patternLength}"
                        step="{config>/step-values/patternLength}"
                    >
                        <!-- <layoutData>
                        <layout:GridData span="XL2 L2 M12 S12" />
                    </layoutData> -->
                    </StepInput>
                </VBox>
                <Label text="PossibleDifference {viewModel>/possibleDifference}" />
                <VBox width="100%">
                    <Slider
                        min="1"
                        max="20"
                        value="{viewModel>/possibleDifference}"
                        visible="{viewModel>/sliderEnabled}"
                        enableTickmarks="true"
                        class="sapUiMediumMarginBottom"
                    >
                        <ResponsiveScale tickmarksBetweenLabels="2" />
                    </Slider>
                    <StepInput
                        visible="{viewModel>/showInputs}"
                        value="{viewModel>/possibleDifference}"
                        min="{config>/minimum-values/possibleDifference}"
                        max="{config>/maximum-values/possibleDifference}"
                        step="{config>/step-values/possibleDifference}"
                    >
                        <!-- <layoutData>
                        <layout:GridData span="XL2 L2 M12 S12" />
                    </layoutData> -->
                    </StepInput>
                </VBox>
                <!-- <form:toolbar>
                    <OverflowToolbar asyncMode="false">
                        <ToolbarSpacer />
                        <Button
                            type="Emphasized"
                            text="Senden"
                            press="onSendRandomPress"
                        />
                    </OverflowToolbar>
                </form:toolbar> -->
                <!-- <form:layoutData>
                    <layout:GridData span="XL2 L2 M12 S12" />
                </form:layoutData> -->
            </form:SimpleForm>
        </content>
        <subHeader>
            <OverflowToolbar asyncMode="false">
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://show"
                    press="onButtonShowInputsPress"
                    text="{i18n>button.showInputs}"
                />
                <Button
                    type="Emphasized"
                    text="Senden"
                    press="onSendRandomPress"
                />
            </OverflowToolbar>
        </subHeader>
    </Page>
</mvc:View>
