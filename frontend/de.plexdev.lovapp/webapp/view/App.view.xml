<mvc:View
	controllerName="de.plexdev.lovapp.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc"
>
	<!-- <App id="app" /> -->
	<tnt:ToolPage id="app">
		<tnt:header>
			<f:ShellBar
				title="LovApp"
				secondTitle="Short description"
				showMenuButton="true"
				homeIcon="./resources/sap/ui/documentation/sdk/images/logo_sap.png"
				showCopilot="false"
				showNotifications="true"
				menuButtonPressed="onMenuButtonPress"
				notificationsNumber="0"
			>
				<!-- <f:menu>
					<Menu>
						<MenuItem
							text="Flight booking"
							icon="sap-icon://flight"
						/>
						<MenuItem
							text="Car rental"
							icon="sap-icon://car-rental"
						/>
					</Menu>
				</f:menu> -->
				<f:profile>
					<Avatar initials="one" />
				</f:profile>
				<f:additionalContent>
					<OverflowToolbarButton
						activeIcon="sap-icon://connected"
						icon="sap-icon://connected"
						type="Reject"
					/>
				</f:additionalContent>
				<!-- <f:searchManager>
					<f:SearchManager />
				</f:searchManager> -->
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				selectedKey="{viewModel>/selectedKey}"
				itemSelect="onItemSelect"
			>
				<tnt:NavigationList items="{
					path: 'viewModel>/navigation'
				}">
					<tnt:NavigationListItem
						text="{viewModel>title}"
						icon="{viewModel>icon}"
						enabled="{viewModel>enabled}"
						expanded="{viewModel>expanded}"
						items="{
							path: 'viewModel>items',
							templateShareable: true
						}"
						key="{viewModel>key}"
					>
						<tnt:NavigationListItem
							text="{viewModel>title}"
							key="{viewModel>key}"
							enabled="{viewModel>enabled}"
						/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{
						path: 'viewModel>/fixedNavigation'
					}">
						<tnt:NavigationListItem
							text="{viewModel>title}"
							icon="{viewModel>icon}"
							enabled="{viewModel>enabled}"
							expanded="{viewModel>expanded}"
							items="{
								path: 'viewModel>items',
								templateShareable: true
							}"
							key="{viewModel>key}"
						>
							<tnt:NavigationListItem
								text="{viewModel>title}"
								key="{viewModel>key}"
								enabled="{viewModel>enabled}"
							/>
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainer"
				initialPage="main"
			>
				<pages>
					<mvc:View
						id="main"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.Main"
						width="100%"
						type="XML"
					/>
					<ScrollContainer
						id="page1"
						horizontal="false"
						vertical="true"
						height="100%"
					>
						<Text text="This is the first page" />
					</ScrollContainer>
					<ScrollContainer
						id="page2"
						horizontal="false"
						vertical="true"
						height="100%"
					>
						<Text text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. A accusantium architecto autem dicta dolor dolores dolorum earum
							enim error esse eum ex exercitationem explicabo facilis fugit ipsum maiores, necessitatibus nemo nihil numquam odio officiis optio
							possimus quas qui quod quos, reiciendis similique sunt tempore tenetur ut vitae voluptate. Ab accusantium, aperiam, asperiores dolores
							fuga id incidunt itaque numquam placeat quidem recusandae veritatis voluptatibus. Delectus, dicta ea harum hic illo necessitatibus nisi
							odit quidem quo quod. Architecto at delectus error eum laborum modi, necessitatibus optio perspiciatis quaerat quam, quas quo
							recusandae repellat sed totam, veritatis voluptas voluptatem voluptates. Accusamus aliquid, asperiores assumenda consequuntur corporis
							cum debitis delectus doloremque earum esse explicabo fugiat id inventore iste laborum modi molestiae neque nihil obcaecati officia
							omnis porro quae asperiores atque cum cumque dicta distinctio, doloremque
							doloribus eaque earum enim eveniet expedita facere fugit impedit iure iusto labore libero maiores non odit pariatur possimus quas" />
					</ScrollContainer>
					<ScrollContainer
						id="settings"
						horizontal="false"
						vertical="true"
						height="100%"
					>
						<Text text="Thats the settingspage" />
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
