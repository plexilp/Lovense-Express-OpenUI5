<mvc:View
	controllerName="de.plexdev.lovapp.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc"
>
	<!-- <App id="app" /> -->
	<tnt:ToolPage
		id="app-tool-page"
		sideExpanded="true"
	>
		<tnt:header>
			<f:ShellBar
				title="LovApp"
				secondTitle="{runtimeModel>/secTitleConnToys}"
				showMenuButton="true"
				showCopilot="false"
				showNotifications="false"
				menuButtonPressed="onMenuButtonPressed"
				notificationsNumber="0"
			>
				<f:additionalContent>
					<OverflowToolbarButton
						icon="sap-icon://connected"
						type="{runtimeModel>/connected}"
						press="onOverflowToolbarButtonConnectPress"
						width="100px"
						visible="{= !${device>/system/phone} || !${device>/orientation/portrait}}"
					/>
					<OverflowToolbarButton
						icon="sap-icon://stop"
						type="Reject"
						press="onOverflowToolbarButtonStopPress"
						width="100px"
						visible="{= !${device>/system/phone} || !${device>/orientation/portrait}}"
					/>
					<OverflowToolbarButton
						icon="sap-icon://history"
						press="onOverflowToolbarButtonHistoryPress"
					/>
				</f:additionalContent>
			</f:ShellBar>
			<!-- <tnt:ToolHeader>
				<Button
						icon="sap-icon://connected"
						type="{runtimeModel>/connected}"
						press="onMenuButtonPressed"
						width="100px"
					/>
				<Title level="H1" text="LovApp" title="TEST" wrapping="false" id="productName">
				</Title>
				<ToolbarSpacer/>
				<Button
						icon="sap-icon://connected"
						type="{runtimeModel>/connected}"
						press="onOverflowToolbarButtonConnectPress"
						width="100px"
					/>
				<Button
					icon="sap-icon://stop"
					type="Reject"
					press="onOverflowToolbarButtonStopPress"
					width="100px"
				/>
			</tnt:ToolHeader> -->
		</tnt:header>
		<tnt:subHeader>
			<tnt:ToolHeader visible="{= ${device>/system/phone} &amp;&amp; ${device>/orientation/portrait}}">
				<Button
					icon="sap-icon://connected"
					type="{runtimeModel>/connected}"
					press="onOverflowToolbarButtonConnectPress"
					width="45%"
				/>
				<ToolbarSpacer />
				<Button
					icon="sap-icon://stop"
					type="Reject"
					press="onOverflowToolbarButtonStopPress"
					width="45%"
				/>
			</tnt:ToolHeader>
		</tnt:subHeader>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				selectedKey="{appModel>/selectedKey}"
				itemSelect="onItemSelect"
			>
				<tnt:NavigationList items="{
					path: 'appModel>/navigation'
				}">
					<tnt:NavigationListItem
						text="{appModel>title}"
						icon="{appModel>icon}"
						enabled="{appModel>enabled}"
						expanded="{appModel>expanded}"
						items="{
							path: 'appModel>items',
							templateShareable: true
						}"
						key="{appModel>key}"
					>
						<tnt:NavigationListItem
							text="{appModel>title}"
							key="{appModel>key}"
							enabled="{appModel>enabled}"
						/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{
						path: 'appModel>/fixedNavigation'
					}">
						<tnt:NavigationListItem
							text="{appModel>title}"
							icon="{appModel>icon}"
							enabled="{appModel>enabled}"
							expanded="{appModel>expanded}"
							items="{
								path: 'appModel>items',
								templateShareable: true
							}"
							key="{appModel>key}"
						>
							<tnt:NavigationListItem
								text="{appModel>title}"
								key="{appModel>key}"
								enabled="{appModel>enabled}"
							/>
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainer"
				initialPage="main"
			>
				<pages>
					<mvc:View
						id="main"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.Main"
						width="100%"
						type="XML"
					/>
					<mvc:View
						id="mode-random"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.modes.Random"
						width="100%"
						type="XML"
					/>
					<mvc:View
						id="mode-sound"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.modes.Sound"
						width="100%"
						type="XML"
					/>
					<mvc:View
						id="mode-predef-patterns"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.modes.PredefinedPatterns"
						width="100%"
						type="XML"
					/>
					<mvc:View
						id="settings"
						displayBlock="false"
						height=""
						viewName="de.plexdev.lovapp.view.Settings"
						width="100%"
						type="XML"
					/>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
