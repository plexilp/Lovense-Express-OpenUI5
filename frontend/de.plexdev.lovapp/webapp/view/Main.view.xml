<mvc:View
	controllerName="de.plexdev.lovapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	core:require="{
		formatter: 'de/plexdev/lovapp/model/formatter'
	}"
>
	<Page
		title="{i18n>appTitle}"
		id="page"
	>
		<content>
			<Select id="idSelectAction" items="{backend>/F4Actions}" selectedItem="{viewModel>/selectedAction}" modelContextChange="setSelection"> 
				<core:Item text="{backend>name}" key="{backend>key}"></core:Item>
			</Select>
			<Select id="idSelectDevice" items="{backend>/getDevices?userId=1}" selectedItem="{viewModel>/selectedDevice}">
				<core:Item text="{backend>name} {= ${backend>nickName} ? '(' + ${backend>nickName} + ')' : ''}" key="{backend>id}"></core:Item>
			</Select>
			<Slider
				min="0"
				max="20"
				enableTickmarks="true"
				liveChange="onSliderLiveChange"
			>
				<ResponsiveScale tickmarksBetweenLabels="2" />
			</Slider>
			<IllustratedMessage
				title="{i18n>appTitle}"
				illustrationType="sapIllus-SearchEarth"
				enableVerticalResponsiveness="true"
				description="{i18n>appDescription}"
			>
				<additionalContent>
					<Button
						id="helloButton"
						text="{
							formatter: 'formatter.formatValue',
							path: 'i18n>btnText'
						}"
						press="sayHello"
					/>
					<Button
						text="STOP"
						press="onPressStop"
					/>
					<Button
						text="TEST"
						press="onPressTest"
					/>
				</additionalContent>
			</IllustratedMessage>
		</content>
	</Page>
</mvc:View>
